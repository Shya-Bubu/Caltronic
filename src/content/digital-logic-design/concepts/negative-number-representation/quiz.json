{
    "id": "negative-number-representation-quiz",
    "questions": [
        {
            "id": "q1",
            "prompt": "In 2's complement, -X is obtained by:",
            "options": [
                "Flipping MSB only",
                "Flipping all bits",
                "Flipping all bits and adding 1",
                "Subtracting from 2^N"
            ],
            "correctAnswer": "Flipping all bits and adding 1",
            "explanation": "2's complement negation: invert all bits, then add 1. This gives -X = X' + 1."
        },
        {
            "id": "q2",
            "prompt": "What is the 4-bit 2's complement of +5 (0101)?",
            "options": [
                "1010",
                "1011",
                "0101",
                "1101"
            ],
            "correctAnswer": "1011",
            "explanation": "Step 1: Invert 0101 -> 1010. Step 2: Add 1 -> 1011. So -5 = 1011."
        },
        {
            "id": "q3",
            "prompt": "What decimal does 1101 represent in 4-bit 2's complement?",
            "options": [
                "-3",
                "-5",
                "13",
                "-2"
            ],
            "correctAnswer": "-3",
            "explanation": "1101: MSB negative weight = -8, then +4+0+1 = -8+5 = -3."
        },
        {
            "id": "q4",
            "prompt": "Range of 4-bit 2's complement is:",
            "options": [
                "-7 to +7",
                "-8 to +7",
                "-8 to +8",
                "0 to 15"
            ],
            "correctAnswer": "-8 to +7",
            "explanation": "N-bit 2's complement: -2^(N-1) to +2^(N-1)-1. For 4 bits: -8 to +7."
        },
        {
            "id": "q5",
            "prompt": "Why is 2's complement preferred over sign-magnitude?",
            "options": [
                "Simpler to convert",
                "Same adder works for signed/unsigned",
                "Smaller range",
                "Two representations of zero"
            ],
            "correctAnswer": "Same adder works for signed/unsigned",
            "explanation": "2's complement allows the same hardware adder to work for both addition and subtraction of signed numbers."
        },
        {
            "id": "q6",
            "prompt": "How many zeros exist in 4-bit 2's complement?",
            "options": [
                "0",
                "1",
                "2",
                "4"
            ],
            "correctAnswer": "1",
            "explanation": "2's complement has exactly one zero: 0000. This is an advantage over sign-magnitude and 1's complement."
        },
        {
            "id": "q7",
            "prompt": "What is 1000 in 4-bit 2's complement?",
            "options": [
                "+8",
                "-8",
                "0",
                "-0"
            ],
            "correctAnswer": "-8",
            "explanation": "1000 = -8 (the most negative 4-bit number). Weight of MSB is -8, other bits are 0."
        },
        {
            "id": "q8",
            "prompt": "In 1's complement, -5 is represented as:",
            "options": [
                "1101",
                "1010",
                "0101",
                "1011"
            ],
            "correctAnswer": "1010",
            "explanation": "1's complement: just flip all bits. +5 = 0101, so -5 = 1010."
        },
        {
            "id": "q9",
            "prompt": "Sign extension of 1101 (4-bit) to 8-bit is:",
            "options": [
                "00001101",
                "11111101",
                "11110101",
                "10001101"
            ],
            "correctAnswer": "11111101",
            "explanation": "Sign extension: copy MSB into new upper bits. MSB=1, so extend with 1s: 11111101."
        },
        {
            "id": "q10",
            "prompt": "Signed overflow occurs in 2's complement when:",
            "options": [
                "Carry out = 1",
                "Sum = 0",
                "Adding pos+pos gives neg",
                "Result is negative"
            ],
            "correctAnswer": "Adding pos+pos gives neg",
            "explanation": "Signed overflow: pos+pos->neg or neg+neg->pos. Example: 7+1=-8 in 4-bit (0111+0001=1000)."
        },
        {
            "id": "q11",
            "prompt": "What is 0101 + 1101 in 4-bit 2's complement?",
            "options": [
                "10010",
                "0010",
                "1010",
                "0000"
            ],
            "correctAnswer": "0010",
            "explanation": "0101 (+5) + 1101 (-3) = 10010. Ignore overflow bit -> 0010 = +2. Correct!"
        },
        {
            "id": "q12",
            "prompt": "In sign-magnitude, the problem is:",
            "options": [
                "No negative numbers",
                "One zero",
                "Two zeros",
                "Complex addition only"
            ],
            "correctAnswer": "Two zeros",
            "explanation": "Sign-magnitude has +0 (0000) and -0 (1000). This causes comparison and arithmetic complexities."
        }
    ]
