{
    "conceptId": "monte-carlo-sampling",
    "visuals": [
        {
            "id": "monte-carlo-convergence",
            "type": "d3-interactive",
            "title": "Monte Carlo Convergence Animation",
            "description": "Watch how the estimate converges to the true value as samples increase",
            "placement": "inline",
            "config": {
                "width": 700,
                "height": 450,
                "targetValue": "mean of distribution",
                "controls": {
                    "samplesSlider": {
                        "min": 10,
                        "max": 10000,
                        "default": 100,
                        "logarithmic": true,
                        "label": "Number of Samples (N)"
                    },
                    "animateButton": true,
                    "resetButton": true
                },
                "showConfidenceInterval": true,
                "showConvergenceCurve": true,
                "showSqrtNLine": true
            }
        },
        {
            "id": "monte-carlo-pi-estimation",
            "type": "d3-interactive",
            "title": "Estimating π with Monte Carlo",
            "description": "Classic demonstration: random points in a square to estimate π",
            "placement": "inline",
            "config": {
                "width": 600,
                "height": 600,
                "controls": {
                    "addPointsButton": {
                        "pointsPerClick": 100,
                        "label": "Add 100 Points"
                    },
                    "add1000Button": {
                        "pointsPerClick": 1000,
                        "label": "Add 1000 Points"
                    },
                    "resetButton": true
                },
                "showCircle": true,
                "showSquare": true,
                "showPiEstimate": true,
                "showErrorPercentage": true,
                "colors": {
                    "insideCircle": "#16a34a",
                    "outsideCircle": "#dc2626"
                }
            }
        },
        {
            "id": "tolerance-analysis-histogram",
            "type": "d3-interactive",
            "title": "Monte Carlo Tolerance Analysis",
            "description": "See output distribution from component tolerance simulation",
            "placement": "inline",
            "config": {
                "width": 700,
                "height": 400,
                "circuit": "voltage divider",
                "components": [
                    { "name": "R1", "nominal": 10000, "tolerance": 0.05 },
                    { "name": "R2", "nominal": 10000, "tolerance": 0.05 }
                ],
                "controls": {
                    "toleranceSlider": {
                        "min": 1,
                        "max": 20,
                        "default": 5,
                        "unit": "%",
                        "label": "Component Tolerance"
                    },
                    "runSimulationButton": {
                        "samples": 1000,
                        "label": "Run 1000 Simulations"
                    }
                },
                "showHistogram": true,
                "showMeanStd": true,
                "show3SigmaRange": true
            }
        },
        {
            "id": "sqrt-n-convergence",
            "type": "d3-static",
            "title": "The √N Convergence Law",
            "description": "Visualization of why Monte Carlo error decreases as 1/√N",
            "placement": "sidebar",
            "config": {
                "width": 400,
                "height": 300,
                "showLogLogPlot": true,
                "showSlope": -0.5,
                "annotations": [
                    { "N": 100, "label": "10% error" },
                    { "N": 10000, "label": "1% error" },
                    { "N": 1000000, "label": "0.1% error" }
                ]
            }
        },
        {
            "id": "random-vs-grid-sampling",
            "type": "d3-interactive",
            "title": "Random vs Grid Sampling Comparison",
            "description": "Compare random Monte Carlo sampling with deterministic grid sampling",
            "placement": "inline",
            "config": {
                "width": 600,
                "height": 400,
                "showBothMethods": true,
                "highlightClustering": true,
                "showCoverageComparison": true,
                "dimensions": 2
            }
        }
    ]
}
