{
    "conceptId": "approximation-methods",
    "visuals": [
        {
            "id": "taylor-approximation-interactive",
            "type": "d3-interactive",
            "title": "Taylor Series Approximation Explorer",
            "description": "Interactively add Taylor terms to see how polynomial approximations converge to the true function",
            "placement": "inline",
            "config": {
                "width": 700,
                "height": 450,
                "functions": [
                    { "name": "sin(x)", "color": "#2563eb" },
                    { "name": "cos(x)", "color": "#dc2626" },
                    { "name": "exp(x)", "color": "#16a34a" },
                    { "name": "ln(1+x)", "color": "#9333ea" }
                ],
                "controls": {
                    "termSlider": {
                        "min": 1,
                        "max": 10,
                        "default": 1,
                        "label": "Number of Terms"
                    },
                    "functionSelect": true,
                    "expansionPointInput": {
                        "default": 0,
                        "label": "Expansion Point (a)"
                    }
                },
                "visualization": {
                    "showTrueFunction": true,
                    "showApproximation": true,
                    "showError": true,
                    "xRange": [-3, 3],
                    "animateTermAddition": true
                }
            }
        },
        {
            "id": "truncation-error-visualization",
            "type": "d3-static",
            "title": "Truncation Error vs Distance from Expansion Point",
            "description": "Shows how error grows as you move away from the expansion point",
            "placement": "sidebar",
            "config": {
                "width": 400,
                "height": 300,
                "showErrorBands": true,
                "compareTermCounts": [1, 3, 5, 7]
            }
        },
        {
            "id": "convergence-radius-demo",
            "type": "d3-interactive",
            "title": "Convergence Radius Demonstration",
            "description": "Shows how some series converge only within a limited radius",
            "placement": "inline",
            "config": {
                "width": 600,
                "height": 400,
                "function": "ln(1+x)",
                "highlightConvergenceRegion": true,
                "showDivergenceWarning": true
            }
        },
        {
            "id": "polynomial-approximation-steps",
            "type": "image-sequence",
            "title": "Building a Taylor Polynomial Step by Step",
            "description": "Visual progression showing each term's contribution",
            "placement": "inline",
            "images": [
                {
                    "src": "taylor-step-0.svg",
                    "caption": "Step 0: Just the constant f(a)"
                },
                {
                    "src": "taylor-step-1.svg", 
                    "caption": "Step 1: Add linear term (tangent line)"
                },
                {
                    "src": "taylor-step-2.svg",
                    "caption": "Step 2: Add quadratic term (parabola)"
                },
                {
                    "src": "taylor-step-3.svg",
                    "caption": "Step 3: Add cubic term"
                }
            ]
        }
    ]
}
