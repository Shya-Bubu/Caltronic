{
    "id": "flashcards-system-response-analysis",
    "conceptId": "system-response-analysis",
    "title": "System Response Analysis Flashcards",
    "cards": [
        {
            "id": "sr-fc1",
            "difficultyLevel": 1,
            "front": "Rise time (tr)",
            "back": "Time from 10% to 90% of final value. Measures speed of response."
        },
        {
            "id": "sr-fc2",
            "difficultyLevel": 1,
            "front": "Settling time (ts)",
            "back": "Time for response to stay within 2% of final value. ts ≈ 4/(ζωn)"
        },
        {
            "id": "sr-fc3",
            "difficultyLevel": 2,
            "front": "Peak time (tp)",
            "back": "Time to reach maximum overshoot. tp = π/ωd"
        },
        {
            "id": "sr-fc4",
            "difficultyLevel": 2,
            "front": "Maximum overshoot (Mp)",
            "back": "Mp = exp(-πζ/√(1-ζ²)) × 100%\nDepends only on damping ratio ζ."
        },
        {
            "id": "sr-fc5",
            "difficultyLevel": 2,
            "front": "Underdamped response (ζ < 1)",
            "back": "Oscillates, overshoots, then settles. Most responsive but has ringing."
        },
        {
            "id": "sr-fc6",
            "difficultyLevel": 2,
            "front": "Critically damped (ζ = 1)",
            "back": "Fastest response without overshoot. Ideal when overshooting is bad."
        },
        {
            "id": "sr-fc7",
            "difficultyLevel": 2,
            "front": "Overdamped (ζ > 1)",
            "back": "Sluggish, no oscillation, no overshoot. Two real poles."
        },
        {
            "id": "sr-fc8",
            "difficultyLevel": 2,
            "front": "Damped natural frequency ωd",
            "back": "ωd = ωn√(1-ζ²)\nActual oscillation frequency. Less than ωn when damped."
        },
        {
            "id": "sr-fc9",
            "difficultyLevel": 2,
            "front": "ζ = 0.7 gives overshoot ≈",
            "back": "≈ 5%\nCommon design target. Good speed/overshoot balance."
        },
        {
            "id": "sr-fc10",
            "difficultyLevel": 2,
            "front": "Transient vs steady-state",
            "back": "Transient: dies out over time (exponential decay)\nSteady-state: remains after transients settle"
        }
    ]
}